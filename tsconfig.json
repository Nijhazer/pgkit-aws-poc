{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,

    // this is here because the version of the Slonik lib used by @slonik/migrator needs type updates
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}